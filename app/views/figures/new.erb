<h1>Create a new figure</h1>

<form action="/figures" method="post">
    <label for="figure_name">Name:</label>
    <input type="text" name="figure[name]" id="figure_name"><br>
    <label for="title">Title:</label><br>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %> <br>
    <% end %>

    <label for="new_title">Create New Title: </label>
    <input type="text" name="title[name]" id="new_title"><br>

    <label for="landmark">Landmark:</label><br>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %> <br>
    <% end %>

    <label for="new_landmark">Create New Landmark: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <input type="submit" value="Create New Figure">

</form>